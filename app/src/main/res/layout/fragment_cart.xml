<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_albaik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:text="albaik"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/ic_minus" />

        <ImageView
            android:id="@+id/img_dish"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_dish" />

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/img_dish"
            android:text="@string/food_name"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/img_dish"
            android:text="@string/quantity" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_food_name"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/tv_quantity"
            android:background="@drawable/ic_plus"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/btn_plus"
            android:text="0" />

        <Button
            android:id="@+id/btn_minous"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_food_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/tv_item_number"
            android:background="@drawable/ic_minus__1"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quantity"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/img_dish"
            android:text="@string/item_price" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quantity"
            android:layout_marginStart="66dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/tv_item_price"
            android:text="@string/total_28_00"
            android:textColor="@android:color/black" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="570dp">

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:text="Subtotal"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/tv_subtotal"
            android:text="@string/total_28_00"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_add_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/whit_rectangle_corners"
            android:text="ADD Items"
            android:textColor="@color/colorGreen" />

        <Button
            android:id="@+id/btn_check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="66dp"
            android:layout_toEndOf="@+id/btn_add_items"
            android:background="@drawable/green_rectangle_corners"
            android:text="check out"
            android:textColor="@android:color/white" />


    </RelativeLayout>


</FrameLayout>